#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# IntelliFlow CRM Pre-commit Hook
# Runs linting, type checking, and formatting before commit

echo "ğŸ” Running pre-commit checks..."

# Auto-regenerate Sprint Plan split files if source CSV changed
# (Split files are gitignored - they exist locally for Claude Code to read)
if git diff --cached --name-only | grep -q "Sprint_plan\.csv$"; then
  echo "ğŸ“Š Sprint_plan.csv changed - regenerating local split files..."
  npx tsx tools/scripts/split-sprint-plan.ts || {
    echo "âŒ Failed to split Sprint_plan.csv"
    exit 1
  }
  echo "âœ… Local split files regenerated (not committed - gitignored)"
fi

# Auto-sync API inventory if router files changed
# Keeps baseline.json in sync with actual tRPC endpoints
if git diff --cached --name-only | grep -q "\.router\.ts$"; then
  echo "ğŸ”„ Router files changed - syncing API inventory..."
  npx tsx tools/scripts/sync-api-inventory.ts || {
    echo "âŒ Failed to sync API inventory"
    exit 1
  }
  # Stage the updated baseline.json
  git add artifacts/benchmarks/baseline.json
  echo "âœ… API inventory synced and staged"
fi

# Auto-sync codebase inventory if relevant source files changed
# Tracks: Prisma schema, middleware, workers, adapters, domain events, validators
CODEBASE_PATTERNS="schema\.prisma|middleware/|workers/|adapters/src/|domain/src/events|validators/src/"
if git diff --cached --name-only | grep -qE "$CODEBASE_PATTERNS"; then
  echo "ğŸ”„ Codebase files changed - syncing full inventory..."
  npx tsx tools/scripts/sync-codebase-inventory.ts || {
    echo "âŒ Failed to sync codebase inventory"
    exit 1
  }
  # Stage the updated baseline.json
  git add artifacts/benchmarks/baseline.json
  echo "âœ… Codebase inventory synced and staged"
fi

# Run linting
echo "ğŸ“‹ Linting code..."
pnpm run lint --filter=!project-tracker || {
  echo "âŒ Linting failed. Please fix errors before committing."
  exit 1
}

# Run type checking
echo "ğŸ”§ Type checking..."
pnpm run typecheck || {
  echo "âŒ Type checking failed. Please fix type errors before committing."
  exit 1
}

# Run formatting check
echo "ğŸ’… Checking code formatting..."
pnpm exec prettier --check "**/*.{ts,tsx,js,jsx,json,md}" || {
  echo "âŒ Code formatting check failed. Running auto-fix..."
  pnpm run format
  echo "âœ… Code formatted. Please review changes and commit again."
  exit 1
}

# Run unit tests for changed files
echo "ğŸ§ª Running affected tests..."
pnpm run test -- --changed || {
  echo "âŒ Tests failed. Please fix failing tests before committing."
  exit 1
}

echo "âœ… All pre-commit checks passed!"
