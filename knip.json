{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": [
        "apps/*/src/index.ts",
        "apps/*/src/index.tsx",
        "apps/*/app/**/*.tsx",
        "apps/*/app/**/*.ts",
        "packages/*/src/index.ts",
        "packages/*/src/index.tsx",
        "tools/**/*.ts",
        "tools/**/*.js",
        "scripts/**/*.ts",
        "scripts/**/*.js",
        "tests/setup.ts",
        "tests/**/*.test.ts",
        "tests/**/*.spec.ts",
        "infra/**/*.ts"
      ],
      "project": ["**/*.ts", "**/*.tsx"]
    }
  },
  "ignore": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/dist/**",
    "**/build/**",
    "**/node_modules/**",
    "**/.next/**",
    "**/coverage/**",
    "**/migrations/**",
    "artifacts/misc/**/*.ts",
    "tools/integrations/**/*.ts",
    "tests/mocks/**",
    "tests/utils/**",
    "tests/architecture/**",
    "apps/ai-worker/src/agents/**",
    "apps/ai-worker/src/examples/**",
    "apps/ai-worker/src/types/**",
    "apps/api/src/middleware/**",
    "apps/api/src/shared/**",
    "apps/api/src/tracing/**",
    "apps/project-tracker/lib/api.ts",
    "apps/project-tracker/lib/data-validator.ts",
    "apps/project-tracker/scripts/**"
  ],
  "ignoreDependencies": [
    "@types/*",
    "eslint-*",
    "prettier",
    "husky",
    "lint-staged",
    "turbo",
    "@changesets/cli",
    "tsx",
    "vitest",
    "@vitest/*",
    "@playwright/test",
    "class-variance-authority",
    "clsx",
    "tailwind-merge",
    "@radix-ui/*",
    "autoprefixer",
    "postcss",
    "depcheck",
    "dependency-cruiser",
    "ts-node",
    "papaparse",
    "@langchain/*",
    "langchain",
    "openai",
    "pino-pretty",
    "zod-to-json-schema",
    "@opentelemetry/*",
    "@sentry/*",
    "@prisma/client",
    "js-yaml",
    "dotenv",
    "zod",
    "@intelliflow/*",
    "docker-compose"
  ],
  "ignoreExportsUsedInFile": true,
  "includeEntryExports": true
}
