{
  "name": "@intelliflow/ai-worker",
  "version": "0.1.0",
  "private": true,
  "description": "AI Worker for IntelliFlow CRM - LangChain/CrewAI processing",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format cjs,esm && tsc -p tsconfig.json --emitDeclarationOnly",
    "start": "node dist/index.js",
    "clean": "rm -rf dist .turbo",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:chains": "vitest run --testPathPattern=chains",
    "ai:benchmark": "tsx src/scripts/benchmark.ts"
  },
  "dependencies": {
    "@intelliflow/validators": "workspace:*",
    "@intelliflow/domain": "workspace:*",
    "@langchain/core": "^0.1.17",
    "@langchain/openai": "^0.0.14",
    "@langchain/community": "^0.0.25",
    "langchain": "^0.1.10",
    "zod": "^3.22.0",
    "zod-to-json-schema": "^3.22.0",
    "openai": "^4.28.0",
    "dotenv": "^16.4.0",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.0"
  },
  "devDependencies": {
    "@intelliflow/typescript-config": "workspace:*",
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
