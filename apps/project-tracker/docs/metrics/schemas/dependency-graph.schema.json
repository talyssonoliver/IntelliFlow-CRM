{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "dependency-graph.schema.json",
  "title": "Dependency Graph Schema",
  "description": "Schema for dependency-graph.json - cross-sprint dependencies",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "pattern": "^(?:(?:\\d\\d[2468][048]|\\d\\d[13579][26]|\\d\\d0[48]|[02468][048]00|[13579][26]00)-02-29|\\d{4}-(?:(?:0[13578]|1[02])-(?:0[1-9]|[12]\\d|3[01])|(?:0[469]|11)-(?:0[1-9]|[12]\\d|30)|(?:02)-(?:0[1-9]|1\\d|2[0-8])))T(?:(?:[01]\\d|2[0-3]):[0-5]\\d(?::[0-5]\\d(?:\\.\\d+)?)?(?:Z))$"
    },
    "description": {
      "type": "string"
    },
    "nodes": {
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "task_id": {
            "type": "string"
          },
          "sprint": {
            "type": "integer",
            "minimum": -9007199254740991,
            "maximum": 9007199254740991
          },
          "status": {
            "type": "string",
            "enum": [
              "DONE",
              "IN_PROGRESS",
              "BLOCKED",
              "PLANNED",
              "FAILED",
              "BACKLOG",
              "VALIDATING",
              "NEEDS_HUMAN",
              "IN_REVIEW"
            ]
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "dependents": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "task_id",
          "sprint",
          "status",
          "dependencies",
          "dependents"
        ],
        "additionalProperties": false
      }
    },
    "critical_paths": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "tasks": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "total_duration_estimate_minutes": {
            "type": "integer",
            "minimum": 0,
            "maximum": 9007199254740991
          },
          "completion_percentage": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
          },
          "blocking_status": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "tasks",
          "total_duration_estimate_minutes",
          "completion_percentage",
          "blocking_status"
        ],
        "additionalProperties": false
      }
    },
    "cross_sprint_dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "from_task": {
            "type": "string"
          },
          "to_task": {
            "type": "string"
          },
          "from_sprint": {
            "type": "integer",
            "minimum": -9007199254740991,
            "maximum": 9007199254740991
          },
          "to_sprint": {
            "type": "integer",
            "minimum": -9007199254740991,
            "maximum": 9007199254740991
          },
          "dependency_type": {
            "type": "string",
            "enum": [
              "REQUIRED",
              "OPTIONAL",
              "BLOCKED_BY"
            ]
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "from_task",
          "to_task",
          "from_sprint",
          "to_sprint",
          "dependency_type"
        ],
        "additionalProperties": false
      }
    },
    "blocked_tasks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ready_to_start": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "dependency_violations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "task_id": {
            "type": "string"
          },
          "violation": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "parallel_execution_groups": {
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {
        "type": "object",
        "propertyNames": {
          "type": "string"
        },
        "additionalProperties": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": [
    "version",
    "last_updated",
    "nodes",
    "critical_paths",
    "ready_to_start"
  ],
  "additionalProperties": false
}
