{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://intelliflow-crm.com/schemas/phase-summary.schema.json",
  "title": "Phase Summary Schema",
  "description": "Schema for aggregating metrics across a sprint phase",
  "type": "object",
  "required": [
    "phase",
    "sprint",
    "description",
    "aggregated_metrics"
  ],
  "properties": {
    "phase": {
      "type": "string",
      "pattern": "^phase-[0-9]+-[a-z-]+$",
      "description": "Phase identifier (e.g., phase-2-parallel)"
    },
    "sprint": {
      "type": "string",
      "pattern": "^sprint-[0-9]+$",
      "description": "Sprint identifier"
    },
    "description": {
      "type": "string",
      "description": "Phase description"
    },
    "streams": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "tasks", "status"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Parallel stream name (e.g., parallel-a)"
          },
          "tasks": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Task IDs in this stream"
          },
          "status": {
            "type": "string",
            "enum": ["NOT_STARTED", "IN_PROGRESS", "DONE", "BLOCKED"]
          }
        }
      },
      "description": "Parallel execution streams within this phase"
    },
    "aggregated_metrics": {
      "type": "object",
      "required": ["total_tasks", "done", "in_progress", "blocked", "not_started"],
      "properties": {
        "total_tasks": {
          "type": "integer",
          "minimum": 0
        },
        "done": {
          "type": "integer",
          "minimum": 0
        },
        "in_progress": {
          "type": "integer",
          "minimum": 0
        },
        "blocked": {
          "type": "integer",
          "minimum": 0
        },
        "not_started": {
          "type": "integer",
          "minimum": 0
        },
        "failed": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "started_at": {
      "type": ["string", "null"],
      "format": "date-time"
    },
    "completed_at": {
      "type": ["string", "null"],
      "format": "date-time"
    },
    "target_duration_minutes": {
      "type": ["integer", "null"]
    },
    "actual_duration_minutes": {
      "type": ["integer", "null"]
    },
    "kpis": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "target": {},
          "actual": {},
          "met": {"type": "boolean"}
        }
      }
    }
  }
}
