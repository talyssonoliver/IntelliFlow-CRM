{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "task-registry.schema.json",
  "title": "Task Registry Schema",
  "description": "Schema for task-registry.json - all tasks across sprints",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "pattern": "^(?:(?:\\d\\d[2468][048]|\\d\\d[13579][26]|\\d\\d0[48]|[02468][048]00|[13579][26]00)-02-29|\\d{4}-(?:(?:0[13578]|1[02])-(?:0[1-9]|[12]\\d|3[01])|(?:0[469]|11)-(?:0[1-9]|[12]\\d|30)|(?:02)-(?:0[1-9]|1\\d|2[0-8])))T(?:(?:[01]\\d|2[0-3]):[0-5]\\d(?::[0-5]\\d(?:\\.\\d+)?)?(?:Z))$"
    },
    "total_tasks": {
      "type": "integer",
      "minimum": 0,
      "maximum": 9007199254740991
    },
    "sprints": {
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "total_tasks": {
            "type": "integer",
            "minimum": 0,
            "maximum": 9007199254740991
          },
          "completed": {
            "type": "integer",
            "minimum": 0,
            "maximum": 9007199254740991
          },
          "in_progress": {
            "type": "integer",
            "minimum": 0,
            "maximum": 9007199254740991
          },
          "validating": {
            "type": "integer",
            "minimum": 0,
            "maximum": 9007199254740991
          },
          "blocked": {
            "type": "integer",
            "minimum": 0,
            "maximum": 9007199254740991
          },
          "planned": {
            "type": "integer",
            "minimum": 0,
            "maximum": 9007199254740991
          },
          "backlog": {
            "type": "integer",
            "minimum": 0,
            "maximum": 9007199254740991
          },
          "failed": {
            "type": "integer",
            "minimum": 0,
            "maximum": 9007199254740991
          },
          "needs_human": {
            "type": "integer",
            "minimum": 0,
            "maximum": 9007199254740991
          },
          "in_review": {
            "type": "integer",
            "minimum": 0,
            "maximum": 9007199254740991
          },
          "not_started": {
            "type": "integer",
            "minimum": 0,
            "maximum": 9007199254740991
          },
          "tasks": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "total_tasks",
          "completed",
          "in_progress",
          "blocked"
        ],
        "additionalProperties": false
      }
    },
    "tasks_by_status": {
      "type": "object",
      "properties": {
        "DONE": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "IN_PROGRESS": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "BLOCKED": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "PLANNED": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "FAILED": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "BACKLOG": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "VALIDATING": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "NEEDS_HUMAN": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "IN_REVIEW": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "tasks_by_section": {
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "task_details": {
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "section": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "owner": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "DONE",
              "IN_PROGRESS",
              "BLOCKED",
              "PLANNED",
              "FAILED",
              "BACKLOG",
              "VALIDATING",
              "NEEDS_HUMAN",
              "IN_REVIEW"
            ]
          },
          "sprint": {
            "type": "integer",
            "minimum": -9007199254740991,
            "maximum": 9007199254740991
          },
          "completed_at": {
            "type": "string",
            "format": "date-time",
            "pattern": "^(?:(?:\\d\\d[2468][048]|\\d\\d[13579][26]|\\d\\d0[48]|[02468][048]00|[13579][26]00)-02-29|\\d{4}-(?:(?:0[13578]|1[02])-(?:0[1-9]|[12]\\d|3[01])|(?:0[469]|11)-(?:0[1-9]|[12]\\d|30)|(?:02)-(?:0[1-9]|1\\d|2[0-8])))T(?:(?:[01]\\d|2[0-3]):[0-5]\\d(?::[0-5]\\d(?:\\.\\d+)?)?(?:Z))$"
          },
          "duration_minutes": {
            "type": "integer",
            "minimum": 0,
            "maximum": 9007199254740991
          },
          "metrics_file": {
            "type": "string"
          }
        },
        "required": [
          "section",
          "description",
          "owner",
          "status",
          "sprint"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "version",
    "last_updated",
    "total_tasks",
    "sprints",
    "tasks_by_status"
  ],
  "additionalProperties": false
}
