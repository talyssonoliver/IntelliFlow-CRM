{
  "name": "@intelliflow/notifications-worker",
  "version": "0.0.1",
  "private": true,
  "description": "Multi-channel notification delivery worker",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/main.ts",
    "start": "node dist/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@intelliflow/worker-shared": "workspace:*",
    "@intelliflow/domain": "workspace:*",
    "@intelliflow/adapters": "workspace:*",
    "bullmq": "^5.1.0",
    "ioredis": "^5.3.2",
    "nodemailer": "^7.0.12",
    "pino": "^8.17.2",
    "twilio": "^5.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@intelliflow/typescript-config": "workspace:*",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "pino-pretty": "^10.3.1",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  }
}
