# Supabase Edge Functions - Local Development Environment Variables
# Copy this file to .env.local and fill in your actual values
# This file is used when running: supabase functions serve --env-file .env.local

# ==============================================================================
# SUPABASE CONFIGURATION (Auto-provided when running locally)
# ==============================================================================
# These are automatically set by Supabase CLI when running locally
# SUPABASE_URL=http://127.0.0.1:54321
# SUPABASE_ANON_KEY=<auto-generated>
# SUPABASE_SERVICE_ROLE_KEY=<auto-generated>
# SUPABASE_DB_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres

# ==============================================================================
# OPENAI CONFIGURATION
# ==============================================================================
# Required for AI-powered edge functions
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ==============================================================================
# EMAIL SERVICES
# ==============================================================================
# SendGrid for transactional emails
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Resend (alternative email provider)
RESEND_API_KEY=re_your-resend-api-key

# ==============================================================================
# EXTERNAL API INTEGRATIONS
# ==============================================================================
# Clearbit for company/lead enrichment
CLEARBIT_API_KEY=sk_your-clearbit-api-key

# ZoomInfo for B2B data enrichment
ZOOMINFO_API_KEY=your-zoominfo-api-key

# ==============================================================================
# MONITORING & LOGGING
# ==============================================================================
# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# ==============================================================================
# RATE LIMITING (Upstash Redis)
# ==============================================================================
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# ==============================================================================
# SECURITY
# ==============================================================================
# API keys for webhook verification
WEBHOOK_SECRET=your-webhook-secret-key

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
ENABLE_AI_ENRICHMENT=true
ENABLE_EMAIL_SENDING=true
ENABLE_RATE_LIMITING=true

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================
DEBUG=true
LOG_LEVEL=debug
