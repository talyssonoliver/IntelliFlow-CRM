# IntelliFlow CRM - AI Worker Dockerfile
# Multi-stage build for LangChain/CrewAI worker service

# Stage 1: Dependencies
FROM node:20-alpine AS deps
RUN corepack enable && corepack prepare pnpm@8.15.0 --activate

WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY apps/ai-worker/package.json ./apps/ai-worker/
COPY packages/*/package.json ./packages/

# Install dependencies
RUN pnpm install --frozen-lockfile --prefer-offline

# Stage 2: Builder
FROM node:20-alpine AS builder
RUN corepack enable && corepack prepare pnpm@8.15.0 --activate

# Install Python for AI dependencies
RUN apk add --no-cache python3 py3-pip build-base

WORKDIR /app

# Copy dependencies from deps stage
COPY --from=deps /app/node_modules ./node_modules
COPY --from=deps /app/apps/ai-worker/node_modules ./apps/ai-worker/node_modules

# Copy source code
COPY . .

# Generate Prisma client
RUN pnpm --filter db db:generate

# Build domain and shared packages
RUN pnpm --filter domain build
RUN pnpm --filter validators build

# Build the AI worker
RUN pnpm --filter ai-worker build

# Prune dev dependencies
RUN pnpm prune --prod

# Stage 3: Runner
FROM node:20-alpine AS runner

# Install Python runtime for AI operations
RUN apk add --no-cache python3 py3-pip

# Set environment
ENV NODE_ENV=production
ENV PYTHONUNBUFFERED=1

# Create non-root user
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 aiworker

WORKDIR /app

# Copy necessary files from builder
COPY --from=builder --chown=aiworker:nodejs /app/node_modules ./node_modules
COPY --from=builder --chown=aiworker:nodejs /app/packages ./packages
COPY --from=builder --chown=aiworker:nodejs /app/apps/ai-worker/dist ./apps/ai-worker/dist
COPY --from=builder --chown=aiworker:nodejs /app/apps/ai-worker/package.json ./apps/ai-worker/
COPY --from=builder --chown=aiworker:nodejs /app/package.json ./

# Install Python dependencies for AI operations
COPY --from=builder --chown=aiworker:nodejs /app/apps/ai-worker/requirements.txt ./apps/ai-worker/
RUN pip3 install --no-cache-dir -r apps/ai-worker/requirements.txt || true

# Switch to non-root user
USER aiworker

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=20s --retries=3 \
  CMD node -e "require('http').get('http://localhost:5000/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})" || exit 1

# Start the AI worker
CMD ["node", "apps/ai-worker/dist/index.js"]
