{
  "name": "@intelliflow/observability",
  "version": "0.1.0",
  "private": true,
  "description": "Observability layer for IntelliFlow CRM - OpenTelemetry, logging, and metrics",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tracer": {
      "import": "./dist/tracer.mjs",
      "require": "./dist/tracer.js",
      "types": "./dist/tracer.d.ts"
    },
    "./tracing": {
      "import": "./dist/tracing.mjs",
      "require": "./dist/tracing.js",
      "types": "./dist/tracing.d.ts"
    },
    "./metrics": {
      "import": "./dist/metrics.mjs",
      "require": "./dist/metrics.js",
      "types": "./dist/metrics.d.ts"
    },
    "./logging": {
      "import": "./dist/logging.mjs",
      "require": "./dist/logging.js",
      "types": "./dist/logging.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/tracer.ts src/tracing.ts src/metrics.ts src/logging.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/tracer.ts src/tracing.ts src/metrics.ts src/logging.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist .turbo",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/auto-instrumentations-node": "0.56.0",
    "@opentelemetry/exporter-metrics-otlp-grpc": "0.56.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "0.56.0",
    "@opentelemetry/instrumentation": "0.56.0",
    "@opentelemetry/resources": "1.30.1",
    "@opentelemetry/sdk-metrics": "1.30.1",
    "@opentelemetry/sdk-node": "0.56.0",
    "@opentelemetry/sdk-trace-base": "1.30.1",
    "@opentelemetry/sdk-trace-node": "1.30.1",
    "@opentelemetry/semantic-conventions": "1.30.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@intelliflow/typescript-config": "workspace:*",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^4.0.16",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  }
}
