{
  "name": "@intelliflow/sdk",
  "version": "0.1.0",
  "description": "Official TypeScript SDK for IntelliFlow CRM - Full end-to-end type safety with tRPC",
  "keywords": [
    "intelliflow",
    "crm",
    "sdk",
    "trpc",
    "typescript",
    "type-safe",
    "api-client",
    "react-query"
  ],
  "homepage": "https://github.com/intelliflow/intelliflow-crm#readme",
  "bugs": {
    "url": "https://github.com/intelliflow/intelliflow-crm/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/intelliflow/intelliflow-crm.git",
    "directory": "packages/sdk"
  },
  "license": "UNLICENSED",
  "author": "IntelliFlow Team",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist .turbo",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@intelliflow/api-client": "workspace:*",
    "@intelliflow/domain": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "@tanstack/react-query": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "@tanstack/react-query": {
      "optional": true
    }
  },
  "devDependencies": {
    "@intelliflow/typescript-config": "workspace:*",
    "@types/node": "^20.11.0",
    "@types/react": "19.2.3",
    "eslint": "^9.0.0",
    "react": "19.2.3",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
