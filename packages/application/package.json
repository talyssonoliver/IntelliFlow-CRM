{
  "name": "@intelliflow/application",
  "version": "0.1.0",
  "private": true,
  "description": "Application layer for IntelliFlow CRM - Use cases and ports",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./ports/*": {
      "types": "./dist/ports/*.d.ts",
      "import": "./dist/ports/*.mjs",
      "require": "./dist/ports/*.js"
    },
    "./usecases/*": {
      "types": "./dist/usecases/*.d.ts",
      "import": "./dist/usecases/*.mjs",
      "require": "./dist/usecases/*.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist .turbo",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@intelliflow/db": "workspace:*",
    "@intelliflow/domain": "workspace:*"
  },
  "devDependencies": {
    "@intelliflow/typescript-config": "workspace:*",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^4.0.16",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  }
}
