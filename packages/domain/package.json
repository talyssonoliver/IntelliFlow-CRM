{
  "name": "@intelliflow/domain",
  "version": "0.1.0",
  "private": true,
  "description": "Domain layer for IntelliFlow CRM - Pure business logic",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./crm/*": {
      "types": "./dist/crm/*.d.ts",
      "import": "./dist/crm/*.mjs",
      "require": "./dist/crm/*.js"
    },
    "./shared/*": {
      "types": "./dist/shared/*.d.ts",
      "import": "./dist/shared/*.mjs",
      "require": "./dist/shared/*.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist .turbo",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@intelliflow/typescript-config": "workspace:*",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  }
}
