{
  "name": "@intelliflow/api-client",
  "version": "0.1.0",
  "private": true,
  "description": "Type-safe tRPC API client for IntelliFlow CRM",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist .turbo",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@intelliflow/api": "workspace:*",
    "@intelliflow/validators": "workspace:*",
    "@tanstack/react-query": "^5.90.12",
    "@trpc/client": "^11.8.0",
    "@trpc/react-query": "^11.8.0",
    "@trpc/server": "^11.8.0"
  },
  "devDependencies": {
    "@intelliflow/typescript-config": "workspace:*",
    "@types/node": "^20.11.0",
    "@types/react": "19.2.3",
    "eslint": "^8.56.0",
    "react": "19.2.3",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  }
}
