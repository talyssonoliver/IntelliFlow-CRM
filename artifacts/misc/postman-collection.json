            "method": "POST",
            "url": "{{baseUrl}}/trpc/opportunity.create",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Enterprise Deal\",\n  \"amount\": 50000,\n  \"stage\": \"PROSPECTING\"\n}" }
          }
        },
        {
          "name": "List Opportunities",
          "request": { "method": "GET", "url": "{{baseUrl}}/trpc/opportunity.list" }
        },
        {
          "name": "Update Stage",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/trpc/opportunity.updateStage",
