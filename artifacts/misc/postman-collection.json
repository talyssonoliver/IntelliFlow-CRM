            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Acme Corporation\",\n  \"industry\": \"Technology\"\n}" }
          }
        },
        {
          "name": "List Accounts",
          "request": { "method": "GET", "url": "{{baseUrl}}/trpc/account.list" }
        }
      ]
    },
    {
      "name": "Opportunity",
      "description": "Opportunity/deal management endpoints",
      "item": [
        {
          "name": "Create Opportunity",
