        }
      ]
    },
    {
      "name": "Agent",
      "description": "AI agent approval workflow",
      "item": [
        {
          "name": "List Pending Approvals",
          "request": { "method": "GET", "url": "{{baseUrl}}/trpc/agent.listPending" }
        },
        {
          "name": "Approve Action",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/trpc/agent.approve",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"approvalId\": \"{{approvalId}}\"\n}" }
          }
        }
      ]
    },
    {
      "name": "Audit",
      "description": "Audit logging endpoints",
      "item": [
        {
          "name": "List Audit Events",
          "request": { "method": "GET", "url": "{{baseUrl}}/trpc/audit.list" }
        }
      ]
    },
    {
      "name": "System",
      "description": "System health and info",
      "item": [
        {
          "name": "Health Check",
          "request": { "method": "GET", "url": "{{baseUrl}}/trpc/health.check" }
        },
        {
          "name": "System Info",
          "request": { "method": "GET", "url": "{{baseUrl}}/trpc/system.info" }
        }
      ]
    }
  ]
}
